<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoReport.Views.FirstPage"
             Title="Name Company">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout HeightRequest="150">
                    <Label Text="Image Company" HorizontalOptions="Center" FontSize="23" Margin="10"/>
                </StackLayout>
                <Label Text="Welcome To Commpany Name" HorizontalOptions="Center" FontSize="20" Margin="10"/>
                <StackLayout>
                    <Button Text="Check-in" HeightRequest="70" WidthRequest="200" HorizontalOptions="Center" />
                    <Button Text="Check-out" HeightRequest="70" WidthRequest="200" HorizontalOptions="Center" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>